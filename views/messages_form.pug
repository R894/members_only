extends layout 

block content
    form(action="", method="post")

        label(for="title") Title:
        input(type="text", id="title", name="title", placeholder="Enter the title of the message")
        br

        label(for="text") Text:
        textarea(id="text", name="text")
        br

        button(type="submit") Submit

        if errors
            ul
                for err in errors
                    li!= err.msg